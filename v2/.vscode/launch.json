    "version": "0.2.0",
    "configurations": [
        {
            "name": "server-no-tls",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "server",
                "--verbose",
                "--address",
                ":8443",
                "--rest-address",
                ":8080"
            ]
        },
        {
            "name": "server-tls",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "server",
                "--verbose",
                "--cacert",
                "${workspaceFolder}/supporting/ca.pem",
                "--cert",
                "${workspaceFolder}/supporting/service.pi.example.com.pem",
                "--key",
                "${workspaceFolder}/supporting/service.pi.example.com-key.pem",
                "--address",
                ":8443",
                "--rest-address",
                ":8080"
            ]
        },
        {
            "name": "client-no-tls",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "server",
                "--verbose",
                "--insecure",
                "--count",
                "10",
                ":8443"
            ]
        },
        {
            "name": "client-tls",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "client",
                "--verbose",
                "--cacert",
                "${workspaceFolder}/supporting/ca.pem",
                ":8443"
            ]
        }
    ]
}
