    "version": "0.2.0",
    "configurations": [
        {
            "name": "server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "server",
                "--verbose",
                "--rest-address",
                ":8080"
            ]
        },
        {
            "name": "otlp",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/pi",
            "args": [
                "server",
                "--verbose",
                "--otlp-target",
                ":4317",
                "--otlp-insecure",
                "--rest-address",
                ":8080"
            ]
        }
    ]
}
